<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:paddingTop="@dimen/padding_12dp"
        android:paddingRight="@dimen/padding_12dp"
        android:paddingLeft="@dimen/padding_12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_tieu_de"
        tools:text="title"
        android:textColor="@color/color_text_main_yes"
        />

    <TextView
        android:padding="@dimen/padding_12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_noi_dung"
        tools:text="title"
        android:textColor="@color/color_text_main_yes"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<TextView-->
            <!--android:padding="@dimen/padding_12dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@id/item_time"-->
            <!--tools:text="day"-->
            <!--android:textColor="@color/color_text_main_yes"-->
            <!--/>-->
        <TextView
            android:padding="@dimen/padding_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_time"
            tools:text="time"
            android:textStyle="italic"
            android:gravity="right"
            android:paddingRight="@dimen/_8sdp"
            android:textColor="@color/color_text_main_yes"
            />
    </LinearLayout>


    <View
        android:layout_marginTop="@dimen/padding"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tab_border"
        />

</LinearLayout>