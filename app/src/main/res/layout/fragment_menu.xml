<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/loChuaDangNhap"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_bg_top_uudai"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_12dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/txXinchao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_xinchao"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/textSize_16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding"
                android:layout_marginTop="@dimen/padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_dang_nhap"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_12dp"
                    android:layout_marginRight="@dimen/padding_12dp"
                    android:text="|"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@id/tvDangKy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_dang_ky"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@id/loDangNhap"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@mipmap/ic_bg_top_uudai"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_12dp"
            android:visibility="gone">

            <ImageView
                android:id="@id/imageView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/ic_avatar"
                android:scaleType="fitXY"
                android:contentDescription="@string/str_item" />

            <LinearLayout
                android:id="@id/loXemHoSoCaNhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_12dp"
                android:orientation="vertical">

                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    tools:text="" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/txtMemNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/background_light"
                        android:text="Số hội viên: " />

                    <TextView
                        android:id="@+id/tvMemberNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/background_light"
                        tools:text="621049917557" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_xem_ho_so"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@color/textColorWhite"
                    android:id="@id/loTangDiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8dp">

                    <ImageView
                        android:layout_width="@dimen/image_h_w"
                        android:layout_height="@dimen/image_h_w"
                        android:layout_margin="@dimen/padding"
                        android:src="@drawable/ic_tang_diem"
                        android:contentDescription="@string/str_item" />

                    <TextView
                        android:id="@+id/font_tangdiem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_12dp"
                        android:text="@string/str_tang_diem"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/tab_border" />

                <LinearLayout
                    android:background="@color/textColorWhite"
                    android:id="@id/loLichSuDiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8dp">

                    <ImageView
                        android:layout_width="@dimen/image_h_w"
                        android:layout_height="@dimen/image_h_w"
                        android:layout_margin="@dimen/padding"
                        android:src="@drawable/ic_lich_su_diem"
                        android:contentDescription="@string/str_item" />

                    <TextView
                        android:id="@+id/font_lichsudiem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_12dp"
                        android:text="@string/str_lich_su_giao_dich"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/tab_border" />

                <LinearLayout
                    android:background="@color/textColorWhite"
                    android:id="@+id/loLichSuHang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8dp">

                    <ImageView
                        android:layout_width="@dimen/image_h_w"
                        android:layout_height="@dimen/image_h_w"
                        android:layout_margin="@dimen/padding"
                        android:src="@mipmap/ic_rank_2"
                        android:contentDescription="@string/str_item" />

                    <TextView
                        android:id="@+id/font_lichsuhang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_12dp"
                        android:text="@string/str_lich_su_hang"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/tab_border" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#F8F8F8"
                    />
                <LinearLayout
                    android:background="@color/textColorWhite"
                    android:id="@id/loMoiBanBe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="@dimen/padding_8dp">

                    <ImageView
                        android:layout_width="@dimen/image_h_w"
                        android:layout_height="@dimen/image_h_w"
                        android:layout_margin="@dimen/padding"
                        android:src="@drawable/ic_moi_ban_be"
                        android:contentDescription="@string/str_item" />

                    <TextView
                        android:id="@+id/font_moibanbe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_12dp"
                        android:text="@string/str_moi_ban_be"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/tab_border" />

                <LinearLayout
                    android:background="@color/textColorWhite"
                    android:id="@id/loNhanTin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="@dimen/padding_8dp">

                    <ImageView
                        android:layout_width="@dimen/image_h_w"
                        android:layout_height="@dimen/image_h_w"
                        android:layout_margin="@dimen/padding"
                        android:src="@drawable/ic_them_sms"
                        android:contentDescription="@string/str_item" />

                    <TextView
                        android:id="@+id/font_nhantinnhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_12dp"
                        android:text="Đăng ký nhận/hủy đăng ký SMS"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/tab_border" />

                <LinearLayout
                    android:background="@color/textColorWhite"
                    android:id="@id/loTroGiup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8dp">

                    <ImageView
                        android:layout_width="@dimen/image_h_w"
                        android:layout_height="@dimen/image_h_w"
                        android:layout_margin="@dimen/padding"
                        android:src="@drawable/ic_tro_giup"
                        android:contentDescription="@string/str_item" />

                    <TextView
                        android:id="@+id/font_trogiup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_12dp"
                        android:text="@string/str_tro_giup"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/tab_border" />

                <LinearLayout
                    android:background="@color/textColorWhite"
                    android:id="@id/loFAQ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8dp">

                    <ImageView
                        android:layout_width="@dimen/image_h_w"
                        android:layout_height="@dimen/image_h_w"
                        android:layout_margin="@dimen/padding"
                        android:src="@drawable/ic_fqa"
                        android:contentDescription="@string/str_item" />

                    <TextView
                        android:id="@+id/font_faq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_12dp"
                        android:text="@string/str_FAQ"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/tab_border" />

                <LinearLayout
                    android:background="@color/textColorWhite"
                    android:id="@id/loHuyTaiKhoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="@dimen/padding_8dp">

                    <ImageView
                        android:layout_width="@dimen/image_h_w"
                        android:layout_height="@dimen/image_h_w"
                        android:layout_margin="@dimen/padding"
                        android:src="@drawable/ic_huy_tai_khoan"

                        android:contentDescription="@string/str_item" />

                    <TextView
                        android:id="@+id/font_huytaikhoan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_12dp"
                        android:text="@string/str_huy_tai_khoan"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/tab_border" />

                <!--L point -->
                <!--<LinearLayout-->
                <!--android:background="@color/textColorWhite"-->
                <!--android:id="@+id/lo_doidiem_lpoint"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:padding="@dimen/padding_8dp">-->

                <!--<ImageView-->
                <!--android:layout_width="@dimen/image_h_w"-->
                <!--android:layout_height="@dimen/image_h_w"-->
                <!--android:layout_margin="@dimen/padding"-->
                <!--android:src="@drawable/ic_lpoint"-->
                <!--android:contentDescription="@string/str_doidiem_lpoint" />-->

                <!--<TextView-->
                <!--android:id="@+id/font_lpoint"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginLeft="@dimen/padding_12dp"-->
                <!--android:text="@string/str_doidiem_lpoint"-->
                <!--android:textSize="@dimen/textSize" />-->
                <!--</LinearLayout>-->

                <!--Thanh toan VNPT pay-->
                <LinearLayout
                    android:id="@+id/lo_thanhtoan_vnpt_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/textColorWhite"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="@dimen/padding_8dp">

                    <ImageView
                        android:layout_width="@dimen/image_h_w"
                        android:layout_height="@dimen/image_h_w"
                        android:layout_margin="@dimen/padding"
                        android:contentDescription="@string/str_doidiem_lpoint"
                        android:src="@drawable/thanhtoan_vnpt_pay" />

                    <TextView
                        android:id="@+id/thanhtoan_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_12dp"
                        android:text="@string/str_thanhtoan_vnpt_pay"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#F8F8F8"
                    />

                <LinearLayout
                    android:background="@color/textColorWhite"
                    android:id="@id/loThoat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_8dp">

                    <ImageView
                        android:layout_width="@dimen/image_h_w"
                        android:layout_height="@dimen/image_h_w"
                        android:layout_margin="@dimen/padding"
                        android:src="@drawable/ic_thoat"
                        android:contentDescription="@string/str_item" />

                    <TextView
                        android:id="@+id/font_thoat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/padding_12dp"
                        android:text="@string/str_dang_xuat"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>
                <View
                    android:background="#F8F8F8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>