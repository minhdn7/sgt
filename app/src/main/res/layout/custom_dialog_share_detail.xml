<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTextView"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_20dp"
        android:paddingRight="@dimen/padding_20dp"
        android:layout_margin="@dimen/padding_12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy chia sẻ ưu đãi hấp dẫn của chúng tôi tới bạn bè của bạn."/>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgFace"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/them_moibanbe_icon2"
                android:contentDescription="@string/str_share" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/padding_12dp"
            android:layout_marginRight="@dimen/padding_12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_DanhBa"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_uudai_icon2"
                android:contentDescription="@string/str_share" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/padding_12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_tin_nhan_face"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/uudai_icon1"
                android:contentDescription="@string/str_share" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_Share"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/uudai_icon4"
                android:contentDescription="@string/str_share" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>