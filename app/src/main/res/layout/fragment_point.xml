<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_MainDiem"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--loading custom-->
            <include
                layout="@layout/progressbar_loading"
                android:visibility="gone" />

            <!--da dang nhap-->

            <LinearLayout
                android:id="@+id/lo_da_dang_nhap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@mipmap/ic_bg_top_uudai"
                    android:orientation="vertical">
                    lượt cài đặt
                    <TextView
                        android:id="@+id/title_tool_bar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/str_thong_tin_tai_khoan"
                        android:textColor="@color/textColorWhite"
                        android:textSize="18sp" />


                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_card_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="16dp"
                            android:src="@mipmap/ic_card_demo" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:paddingStart="4dp"
                                android:visibility="gone"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_label_now_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Số hội viên:" />

                                <TextView
                                    android:id="@+id/tv_now_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="380028392991" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:paddingStart="4dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_label_rank_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Hạng hội viên:" />

                                <TextView
                                    android:id="@+id/tv_rank_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center_vertical"
                                    android:focusable="false"

                                    android:padding="2dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:orientation="vertical"
                                android:paddingStart="4dp">

                                <TextView
                                    android:id="@+id/tv_label_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/str_so_diem_hien_tai" />

                                <TextView
                                    android:id="@+id/tv_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center_vertical"
                                    android:padding="2dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:orientation="vertical"
                                android:paddingStart="4dp"
                                android:weightSum="10">

                                <TextView
                                    android:id="@+id/tv_label_period_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/str_thoi_han_su_duyng_diem"/>

                                <TextView
                                    android:id="@+id/tv_period_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="6"
                                    android:gravity="center_vertical"
                                    android:padding="2dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:orientation="vertical"
                                android:weightSum="10"
                                android:paddingStart="4dp">

                                <TextView
                                    android:id="@+id/tv_label_check_rank_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/str_diem_xet_hang" />

                                <TextView
                                    android:id="@+id/tv_check_rank_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center_vertical"
                                    android:padding="2dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:orientation="vertical"
                                android:paddingStart="4dp"
                                android:weightSum="10">

                                <TextView
                                    android:id="@+id/tv_label_condition_maintain_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Điều kiện duy trì hạng:" />

                                <TextView
                                    android:id="@+id/tv_condition_maintain_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center_vertical"
                                    android:padding="2dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:orientation="vertical"
                                android:paddingStart="4dp"
                                android:weightSum="10">

                                <TextView
                                    android:id="@+id/tv_label_condition_update_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:gravity="center_vertical"
                                    android:text="Điều kiện lên hạng:" />

                                <TextView
                                    android:id="@+id/tv_condition_update_point"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_weight="6"
                                    android:gravity="center_vertical"
                                    android:padding="2dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:orientation="vertical"
                                android:paddingStart="4dp"
                                android:weightSum="10">

                                <TextView
                                    android:id="@+id/tv_label_date_check"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/str_ky_xet_hang" />

                                <TextView
                                    android:id="@+id/tv_date_check"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center_vertical"
                                    android:padding="2dp" />
                            </LinearLayout>
                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_type_point"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="@string/str_diem_co_thoi_han"
                            android:textColor="@color/md_black"
                            android:textSize="14sp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/md_blue_700">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".7"
                                    android:gravity="center"
                                    android:text="@string/str_stt"
                                    android:textColor="@android:color/background_light"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/text3"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:paddingLeft="@dimen/padding"
                                    android:text="@string/str_pham_vi"
                                    android:textColor="@android:color/background_light"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/text4"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="@dimen/padding"
                                    android:text="@string/str_so_diem"
                                    android:textColor="@android:color/background_light"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/text5"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/str_thoi_han"
                                    android:textColor="@android:color/background_light"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@id/tv_null"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/str_chua_co_mo_ta"
                                android:visibility="gone" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@id/rcvDanhSach"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </android.support.v7.widget.RecyclerView>
                        </FrameLayout>
                    </LinearLayout>

                </ScrollView>
            </LinearLayout>


            <!--chua dang nhap-->
            <LinearLayout
                android:id="@+id/lo_chua_dang_nhap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_thongtindiem_chuadn"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@null"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/img_back"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:contentDescription="@string/str_back"
                        android:padding="@dimen/padding_12dp"
                        android:src="@drawable/ic_keyboard_arrow_left_white_36dp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Thông tin điểm"
                        android:textColor="@color/textColorWhite"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="@dimen/img_back"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:contentDescription="@string/str_back"
                        android:visibility="invisible"
                        tools:src="@drawable/ic_keyboard_arrow_left_white_36dp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_gioithieu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="@dimen/padding_20dp"
                                android:text="Vui lòng ĐĂNG NHẬP hoặc ĐĂNG KÝ để sử dụng tính năng cùng SaiGonTourist."
                                android:textSize="16dp" />


                            <Button
                                android:id="@id/btnLogin"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_btn_tap"
                                android:elevation="@dimen/elevation_button"
                                android:paddingLeft="@dimen/padding_32dp"
                                android:paddingRight="@dimen/padding_32dp"
                                android:text="ĐĂNG NHẬP"
                                android:textColor="@color/textColorWhite"
                                tools:targetApi="lollipop" />


                        </LinearLayout>


                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>